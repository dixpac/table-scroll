<%= turbo_stream.append "rows" do %>
  <%= render partial: "person", collection: @people %>
<% end %>

<% if @pagy.next.present? %>
  <%= turbo_stream.replace "pagination" do %>
    <%= turbo_frame_tag "pagination", src: people_path(page: @pagy.next, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% end %>
